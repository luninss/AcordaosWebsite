extends layout

block content
  style.
    .fixed-width {
      width: 16%; 
    }
    .descritores-width {
      width: 32%;
    }
    .pagination {
      display: flex;
      justify-content: space-between;
      padding: 16px 0;
    }
    .pagination button {
      background-color: #2196F3; 
      color: white;
      border: none;
      padding: 10px 16px;
      cursor: pointer;
      transition: background-color 0.3s;
      border-radius: 4px;
    }
    .pagination button:hover {
      background-color: #0b7dda; 
    }
    .action-buttons {
      display: flex;
      justify-content: space-around;
    }
    .search-container {
      margin-bottom: 20px;
    }
    .search-container input[type="text"] {
      width: calc(50% - 100px);
      padding: 10px;
      margin-right: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    .search-container select {
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
      width: calc(50% - 100px);
      margin-right: 10px;
    }
    .search-container button {
      padding: 10px 16px;
      background-color: #2196F3;
      color: white;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s;
      border-radius: 4px;
    }
    .search-container button:hover {
      background-color: #0b7dda;
    }

  .w3-card-4
    header.w3-light-blue
      h2.w3-center Acordãos do tribunal #{tribunal}
    .w3-container.search-container
      form(method='GET', action='/search/' + tribunal)
        input(type='text', name='descritor', placeholder='Procure por um descritor...')
        select(name='sort')
          option(value='asc') Data Ascendente
          option(value='desc') Data Descendente
        button(type='submit') Procurar
    if acordaos
      table.w3-table-all
        thead
          tr
            th.fixed-width Processo
            th.fixed-width Tribunal
            th.fixed-width Data
            th.fixed-width Relator
            th.descritores-width Descritores
            if loggedin 
              if level
                th.fixed-width Ações 
        tbody
          each acordao in acordaos
            tr
              td.fixed-width
                a(href=`/acordao/${acordao._id}`)= acordao.processo
              td.fixed-width
                a(href=`/acordao/tribunal/${acordao.tribunal}`)= acordao.tribunal
              td.fixed-width= acordao.data_acordao
              td.fixed-width= acordao.relator
              td.descritores-width
                if acordao.descritores
                  - var descritoresToShow = acordao.descritores.slice(0, 3);
                  - var hasMoreDescritores = acordao.descritores.length > 3;
                  each descritor, index in descritoresToShow
                    span= descritor
                    if index < descritoresToShow.length - 1
                      br
                  if hasMoreDescritores
                    br
                    span (...) 
                else 
                  span - - - 
              td.action-buttons
                form(method='POST', action="/acordao/favorite/" + acordao._id)
                  button(type='submit' class='w3-button w3-pink')
                    i.fa.fa-heart 
                if loggedin 
                  if level
                    a.w3-button.w3-blue(href="/acordao/edit/" + acordao._id)
                      i.fa.fa-pencil-alt 
                    a.w3-button.w3-red(href="/acordao/delete/" + acordao._id)
                      i.fa.fa-trash 
    else 
      p Sem acordãos para apresentar

  .pagination
    .w3-left
      if page > 1
        button(type='button', onclick=`window.location.href='/?page=${page-1}&limit=${limit}'`) &lt; Anterior
    .w3-right
      if page < totalPages
        button(type='button', onclick=`window.location.href='/?page=${page+1}&limit=${limit}'`) Próximo &gt;
