extends layout

block content
    .w3-container
        .w3-card
            .w3-container.w3-blue
                h2 Sign Up
            if error
                p.w3-text-red= error
            form.w3-container.w3-card-4(action="/signupadmin", method="POST")
                .w3-row.w3-section
                    .w3-col.s4
                        label.w3-text-grey Nome
                    .w3-col.s8
                        input.w3-input(type="text", name="nome", required)
                .w3-row.w3-section
                    .w3-col.s4
                        label.w3-text-grey Username
                    .w3-col.s8
                        input.w3-input(type="text", name="username", required)
                .w3-row.w3-section
                    .w3-col.s4
                        label.w3-text-grey Email
                    .w3-col.s8
                        input.w3-input(type="email", name="email", required)
                .w3-row.w3-section
                    .w3-col.s4
                        label.w3-text-grey Password
                    .w3-col.s8
                        input.w3-input(type="password", name="password", required)
                .w3-row.w3-section
                    .w3-col.s4
                    .w3-col.s8
                        button.w3-button.w3-blue(type="submit") Sign Up
        if error
            p.w3-text-red= error
