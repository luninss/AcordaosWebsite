extends layout

block content
  h1.w3-center Editar Acord√£o

  form.w3-container(method="POST")

    .w3-section
      label.w3-text-grey(for="_id") *Id:
      input.w3-input.w3-border(type="text" name="_id" id="_id" required value=acordao._id readonly)

    .w3-section
      label.w3-text-grey(for="processo") *Processo:
      input.w3-input.w3-border(type="text" name="processo" id="processo" required value=acordao.processo)
    
    .w3-section
      label.w3-text-grey(for="data_acordao") *Data Acordao:
      input.w3-input.w3-border(type="date" name="data_acordao" id="data_acordao" required value=acordao.data_acordao)
    
    .w3-section
      label.w3-text-grey(for="tribunal") *Tribunal:
      select.w3-select.w3-border(name="tribunal" id="tribunal" required value=acordao.tribunal)
        option(value="" disabled selected) Escolha um Tribunal
        each tribunal in tribunais
          option(value=tribunal.tribunal)= tribunal.tribunal
    
    .w3-section
      label.w3-text-grey(for="relator") *Relator:
      input.w3-input.w3-border(type="text" name="relator" id="relator" required value=acordao.relator)
    
    .w3-section
      label.w3-text-grey(for="descritores") *Descritores:
      input.w3-input.w3-border(type="text" name="descritores" id="descritores" placeholder="Comma-separated values" required value=acordao.descritores)
    
    .w3-section
      label.w3-text-grey(for="numero_convencional") *Numero Convencional:
      input.w3-input.w3-border(type="text" name="numero_convencional" id="numero_convencional" required value=acordao.numero_convencional)
    
    .w3-section
      label.w3-text-grey(for="numero_documento") *Numero Documento:
      input.w3-input.w3-border(type="text" name="numero_documento" id="numero_documento" required value=acordao.numero_documento)
    
    .w3-section
      label.w3-text-grey(for="votacao") *Votacao:
      input.w3-input.w3-border(type="text" name="votacao" id="votacao" required value=acordao.votacao)
    
    .w3-section
      label.w3-text-grey(for="texto_integral") *Texto Integral:
      textarea.w3-input.w3-border(type="text" name="texto_integral" id="texto_integral" required value=acordao.texto_integral)
    
    .w3-section
      label.w3-text-grey(for="url") *URL:
      input.w3-input.w3-border(type="url" name="url" id="url" required value=acordao.url)
    
    .w3-section
      label.w3-text-grey(for="requerente") Requerente:
      input.w3-input.w3-border(type="text" name="outros_campos[requerente]" id="requerente" value=acordao.requerente)
    
    .w3-section
      label.w3-text-grey(for="requerido") Requerido:
      input.w3-input.w3-border(type="text" name="outros_campos[requerido]" id="requerido" value=acordao.requerido)
    
    .w3-section
      label.w3-text-grey(for="privacidade") Privacidade:
      input.w3-input.w3-border(type="text" name="outros_campos[privacidade]" id="privacidade" value=acordao.privacidade)
    
    .w3-section
      label.w3-text-grey(for="normas_apreciadas") Normas Apreciadas:
      input.w3-input.w3-border(type="text" name="outros_campos[normas_apreciadas]" id="normas_apreciadas" value=acordao.normas_apreciadas)
    
    .w3-section
      label.w3-text-grey(for="normas_julgadas_inconst") Normas Julgadas Inconst:
      input.w3-input.w3-border(type="text" name="outros_campos[normas_julgadas_inconst]" id="normas_julgadas_inconst" value=acordao.normas_julgadas_inconst)
    
    .w3-section
      label.w3-text-grey(for="area_tematica_1") Area Tematica 1:
      input.w3-input.w3-border(type="text" name="outros_campos[area_tematica_1]" id="area_tematica_1" value=acordao.area_tematica_1)
    
    .w3-section
      label.w3-text-grey(for="area_tematica_2") Area Tematica 2:
      input.w3-input.w3-border(type="text" name="outros_campos[area_tematica_2]" id="area_tematica_2" value=acordao.area_tematica_2)
    
    .w3-section
      label.w3-text-grey(for="decisao") Decisao:
      input.w3-input.w3-border(type="text" name="outros_campos[decisao]" id="decisao" value=acordao.decisao)
    
    .w3-section
      label.w3-text-grey(for="sumario") Sumario:
      textarea.w3-input.w3-border(name="outros_campos[sumario]" id="sumario" value=acordao.sumario)
    
    .w3-section
      button.w3-button.w3-blue(type="submit") Edit Acordao