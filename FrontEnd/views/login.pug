extends layout

block content
    .w3-container
        .w3-card
            .w3-container.w3-blue
                h2 Login
            if error
                p.w3-text-red= error
            else
                form(action="/login", method="POST")
                    .w3-container
                        .w3-row.w3-section
                            .w3-col.s4
                                label.w3-text-grey Username
                            .w3-col.s8
                                input.w3-input(type="text", name="username", required)
                        .w3-row.w3-section
                            .w3-col.s4
                                label.w3-text-grey Password
                            .w3-col.s8
                                input.w3-input(type="password", name="password", required)
                        .w3-row.w3-section
                            .w3-col.s12
                                button.w3-button.w3-blue(type="submit") Login
            if teste        
                p.w3-text-red= teste