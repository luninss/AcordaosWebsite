doctype html
html
  head
    title Acordãos
    meta(charset='utf-8')
    link(rel='stylesheet', href='/stylesheets/w3.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
    style.
      body, html {
        height: 100%;
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
      }
      .w3-sidebar {
        height: 100%;
        width: 250px;
        transition: width 0.3s;
        background-color: #f1f1f1;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 2; 
        padding-top: 56px; 
      }
      .w3-sidebar.collapsed {
        width: 0;
        padding-top: 56px; 
      }
      .w3-main {
        margin-left: 250px;
        transition: margin-left 0.1s;
        padding: 16px;
      }
      .w3-main.collapsed {
        margin-left: 0;
      }
      .sidebar-item {
        padding: 16px;
        text-decoration: none;
        color: black;
        display: block;
      }
      .sidebar-item:hover {
        background-color: #ddd;
      }
      .sidebar-item i {
        margin-right: 8px; /* Adjust spacing between icon and text */
      }
      #toggleSidebar {
        position: fixed;
        top: 16px;
        left: 16px;
        z-index: 3; /* Ensure the button is on top of everything */
      }
  body
    button.w3-button.w3-xlarge#toggleSidebar ☰
    .w3-sidebar.w3-bar-block.w3-card.w3-animate-left(id='mySidebar')
      a.sidebar-item(href='/')
        i.fa.fa-home
        | Página Inicial
      a.sidebar-item(href='/tribunal')
        i.fa.fa-building
        | Tribunais
      if loggedin
        a.sidebar-item(href='/perfil')
          i.fa.fa-user
          | Perfil
        a.sidebar-item(href='/favoritos')
          i.fa.fa-heart
          | Favoritos
        a.sidebar-item(href='/logout')
          i.fa.fa-sign-out-alt
          | Logout
        if level
          a.sidebar-item(href='/acordao/adicionar')
            i.fa.fa-plus
            | Adicionar Acórdão
          a.sidebar-item(href='/tribunal/adicionar')
            i.fa.fa-plus
            | Adicionar Tribunal
          a.sidebar-item(href='/signupADMIN')
            i.fa.fa-user-plus
            | Adicionar Administrador
      else 
        a.sidebar-item(href='/login')
          i.fa.fa-sign-in-alt
          | Login 
        a.sidebar-item(href='/signup')
          i.fa.fa-user-plus
          | Sign Up
      
    .w3-main#mainContent
      block content

    script.
      document.getElementById('toggleSidebar').onclick = function() {
        var sidebar = document.getElementById('mySidebar');
        var mainContent = document.getElementById('mainContent');
        sidebar.classList.toggle('collapsed');
        mainContent.classList.toggle('collapsed');
      }
